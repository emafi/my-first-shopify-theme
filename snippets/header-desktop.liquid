<div class="relative bg-white hidden md:block items-center">
  <div class="mx-auto flex justify-between px-4">
    <div class="flex items-center py-6 justify-start space-x-10">
      <div class="flex justify-start items-center lg:flex-1 truncate">
        <h1 class="k text-xl font-bold truncate mr-4">
          {{ onClickOpen }}
          {{ onClickAway }}
        </h1>

      {% comment %} <nav x-data="{{open}}" class="flex space-x-10">
                          {% for link in linklists.main-menu.links %}
                            {% if link.links != blank %}
                              <div class="relative">
                                <button
                                  x-on:click="{{onClickOpen}}"
                                  type="button"
                                  class="inline-flex items-center text-base text-gray-500 hover:text-gray-900">
                                  {{ link.title }}{% render 'icon-dropdown' %}</button>
                                <div
                                  @click.away="{{onClickOpen}}"
                                  x-show="{{open}}"
                                  class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2">
                                  <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                                    <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                                      {% for sublink in link.links %}
                                        <a href="{{sublink.url}}" class="-m-3 p-3 flex items start rounded-lg hover:bg-gray-100">
                                          <div class="ml-4">
                                            <p class="text-gray-900 text-base font-medium">
                                              {{ sublink.title }}
                                            </p>
                                          </div>
                                        </a>
                                      {% endfor %}
                                    </div>
                                  </div>
                                </div>
                              </div>
                            {% else %}
                              <div class="relative">
                                <a
                                  tabindex="0"
                                  href="{{link.url}}"
                                  class="text-base text-gray-500 hover:text-gray-900">{{ link.title }}</a>
                              </div>
                            {% endif %}
                          {% endfor %}
                    </nav> {% endcomment %}
      </div>
    </div>
    <div class="flex items-center justify-end flex-1 space-x-5">
      <a
        aria-label='cart'
        href="{{routes.cart_url}}"
        class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
        {% render 'icon-shopping-bag' %}
      </a>

      <a href="{{routes.account_login_url}}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
      <a href="{{routes.account_register_url}}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
    </div>
  </div>
</div>