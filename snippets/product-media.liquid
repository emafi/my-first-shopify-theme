{% case media.media_type %}
  {% when 'image' %}
    <img src="{{media |  image_url: width: 480 }}" class="w-full h-full" />
  {% comment %} {% when 'external_video' %}
                    {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}
                  {% when 'video' %}
            {{ media | video_tag: class: 'w-full h-80 object-cover' }} {% endcomment %}
  {% else %}
    ''
{% endcase %}
{% comment %} <div class="bg-red">{{ media }} {{ media.media_type }}</div> {% endcomment %}